<%- include('../partials/header.ejs') %>
<div class="content">
    <form action="/stories" method="POST" class="new-form">
        <label for="condition">Condition</label>
        <select id="condition" name="condition" required>
            <option value="New">New</option>
            <option value="Good">Good</option>
            <option value="Used - Like New">Used - Like New</option>
            <option value="Fair">Fair</option>
        </select>

        <label for="price">Price</label>
        <input type="text" id="price" name="price" required>

        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>

        <label for="offers">Offers</label>
        <input type="text" id="offers" name="offers" required>

        <label for="content">Details</label>
        <textarea rows="5" id="content" name="content" class="fixed-width" required></textarea>

        <label for="image">Image</label>
        <input type="file" name="image" id="image"> <!-- Image upload input -->

        <input type="submit" value="Submit">
    </form>
</div>
<%- include('../partials/footer.ejs') %>